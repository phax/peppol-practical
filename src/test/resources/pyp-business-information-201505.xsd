<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns="http://www.peppol.eu/schema/pyp/businessinformation/201505/" 
           xmlns:xs="http://www.w3.org/2001/XMLSchema" 
           targetNamespace="http://www.peppol.eu/schema/pyp/businessinformation/201505/" 
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">
  <xs:annotation>
    <xs:documentation>
       This is the XML schema for the Peppol Yellow Pages
         business information to be stored in the Extension
         of an SMP ServiceGroup entry.
       
       Author: Philip Helger, Bundesrechenzentrum GmbH

       Last update: 2015-05-29, Philip Helger
    </xs:documentation>
  </xs:annotation>
  
  <xs:complexType name="IdentifierType">
    <xs:annotation>
      <xs:documentation>
        This type resembles the structure of a single identifier.
      </xs:documentation>
    </xs:annotation>
    <xs:simpleContent>
      <xs:annotation>
        <xs:documentation>
          The value of this identifier.
        </xs:documentation>
      </xs:annotation>
      <xs:extension base="xs:string">
        <xs:attribute name="type" type="xs:string" use="required">
          <xs:annotation>
            <xs:documentation>
              The type of this identifier.
            </xs:documentation>
          </xs:annotation>
        </xs:attribute>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <xs:complexType name="EntityType">
    <xs:sequence>
      <xs:element name="Name" type="xs:string" minOccurs="0" maxOccurs="1">
        <xs:annotation>
          <xs:documentation>
            The name of the entity.
          </xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="GeoInfo" type="xs:string" minOccurs="0" maxOccurs="1">
        <xs:annotation>
          <xs:documentation>
            This element may contain specific geographic information.
            It may be an address or simply a region.
          </xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="Identifier" type="IdentifierType" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:documentation>
            This element is meant o contain additional identifiers for this
            entity like VAT number, national organisation number etc.
          </xs:documentation>
        </xs:annotation>
      </xs:element>
      <xs:element name="FreeText" type="xs:string" minOccurs="0" maxOccurs="1">
        <xs:annotation>
          <xs:documentation>
            This element contains all other information that might be relevant but is not
            necessarily be contained in a structured field.
          </xs:documentation>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
    <xs:attribute name="countryCode" type="xs:token" use="optional">
      <xs:annotation>
        <xs:documentation>
          The optional ISO 3166-2 country code (e.g. "AT" for Austria or "NO" for Norway).
        </xs:documentation>
      </xs:annotation>
    </xs:attribute>
  </xs:complexType>  

  <xs:complexType name="BusinessInformationType">
    <xs:sequence>
      <xs:element name="Entity" type="EntityType" minOccurs="0" maxOccurs="unbounded">
        <xs:annotation>
          <xs:documentation>
            This is the unbounded list of entities (companies or public administration 
            bodies) that can be reached via this ServiceGroup.
          </xs:documentation>
        </xs:annotation>
      </xs:element>
    </xs:sequence>
  </xs:complexType>  
    
  <xs:element name="BusinessInformation" type="BusinessInformationType">
    <xs:annotation>
      <xs:documentation>
        This is the root element for the PYP business information.
      </xs:documentation>
    </xs:annotation>
  </xs:element>
</xs:schema>