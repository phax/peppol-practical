<ContextValueAssociation name="NONAT-T17-codes" xmlns="http://docs.oasis-open.org/codelist/ns/ContextValueAssociation/1.0/">
  <ns0:ValueLists xmlns:ns0="">
    <ns0:ValueList ns0:uri="CountryIdentificationCode.gc" xml:id="CountryIdentificationCode" />
    <ns0:ValueList ns0:uri="CurrencyCode.gc" xml:id="CurrencyCode" />
    <ns0:ValueList ns0:uri="PostalAddressIdentifier.gc" xml:id="PostalAddressIdentifier" />
    <ns0:ValueList ns0:uri="TaxCategoryID.gc" xml:id="TaxCategoryID" />
    <ns0:ValueList ns0:uri="TaxSchemeID.gc" xml:id="TaxSchemeID" />
  </ns0:ValueLists>
  <ns0:Contexts xmlns:ns0="">
    <ns0:Context ns0:address="@currencyID" ns0:mark="fatal" ns0:values="CurrencyCode">
      <ns0:Message>[CL-017-002]-Currencies in an reminder MUST be coded using ISO currency code</ns0:Message>
    </ns0:Context>
    <ns0:Context ns0:address="cac:Country/cbc:IdentificationCode" ns0:mark="fatal" ns0:values="CountryIdentificationCode">
      <ns0:Message>[CL-017-003]-Country codes in an reminder MUST be coded using ISO code list 3166-1</ns0:Message>
    </ns0:Context>
    <ns0:Context ns0:address="cac:TaxScheme/cbc:ID" ns0:mark="warning" ns0:values="TaxSchemeID">
      <ns0:Message>[CL-017-004]-Reminder tax schemes MUST be coded using UN/ECE 5153 code list</ns0:Message>
    </ns0:Context>
    <ns0:Context ns0:address="cac:TaxCategory/cbc:ID" ns0:mark="warning" ns0:values="TaxCategoryID">
      <ns0:Message>[CL-017-005]-Reminder tax categories MUST be coded using UN/ECE 5305 code list</ns0:Message>
    </ns0:Context>
    <ns0:Context ns0:address="cac:PostalAddress/cbc:ID/@schemeID" ns0:mark="warning" ns0:values="PostalAddressIdentifier">
      <ns0:Message>[CL-017-006]-Postal address identifiers SHOULD ONLY be GLN.</ns0:Message>
    </ns0:Context>
  </ns0:Contexts>
</ContextValueAssociation>
